{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/ssas-backend-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName"]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection":"Server=localhost;Database=SabaFone_SSAS;User Id=sa;Password=YourPassword123!;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "Redis": "localhost:6379,abortConnect=false,ssl=false,password="
  },
  "Jwt": {
    "SecretKey": "ThisIsAVerySecureSecretKeyForSabaFoneSSAS2024!@#$%^&*()_+1234567890",
    "Issuer": "SabaFone-SSAS",
    "Audience": "SabaFone-SSAS-Users",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3001",
      "http://localhost:4200",
      "https://ssas.sabafone.com",
      "https://security.sabafone.com"
    ]
  },
  "Email": {
    "SmtpHost": "smtp.office365.com",
    "SmtpPort": 587,
    "SmtpUsername": "ssas@sabafone.com",
    "SmtpPassword": "YourEmailPassword",
    "FromEmail": "ssas@sabafone.com",
    "FromName": "SabaFone SSAS",
    "EnableSsl": true
  },
  "Sms": {
    "Provider": "Twilio",
    "AccountSid": "YourTwilioAccountSid",
    "AuthToken": "YourTwilioAuthToken",
    "FromNumber": "+967123456789",
    "BaseUrl": "https://api.twilio.com"
  },
  "Storage": {
    "Provider": "Local",
    "LocalPath": "C:\\SabaFone\\SSAS\\Storage",
    "BackupPath": "C:\\SabaFone\\SSAS\\Backups",
    "TempPath": "C:\\SabaFone\\SSAS\\Temp",
    "MaxFileSize": 52428800,
    "AllowedExtensions": [".pdf", ".doc", ".docx", ".xls", ".xlsx", ".zip", ".rar", ".7z"]
  },
  "Security": {
    "PasswordHistoryCount": 12,
    "PasswordExpirationDays": 90,
    "MaxFailedAttempts": 5,
    "LockoutDurationMinutes": 30,
    "SessionTimeoutMinutes": 30,
    "RequireTwoFactor": false,
    "RequireEmailConfirmation": true,
    "EnableAuditLog": true
  },
  "Backup": {
    "DefaultRetentionDays": 30,
    "MaxBackupSizeGB": 100,
    "CompressionLevel": 6,
    "EnableEncryption": true,
    "EnableIncremental": true,
    "EnableDeduplication": true,
    "VerifyAfterBackup": true
  },
  "Vulnerability": {
    "ScannerType": "OpenVAS",
    "ScannerUrl": "https://openvas.sabafone.local",
    "ScannerApiKey": "YourScannerApiKey",
    "AutoScanEnabled": true,
    "ScanSchedule": "0 2 * * *",
    "MaxConcurrentScans": 5
  },
  "Compliance": {
    "Frameworks": ["ISO27001", "NIST", "PCI-DSS", "GDPR"],
    "AssessmentFrequencyDays": 90,
    "AuditRetentionYears": 7,
    "RequireEvidence": true,
    "AutoGenerateReports": true
  },
  "Monitoring": {
    "MetricsEnabled": true,
    "MetricsEndpoint": "/metrics",
    "HealthCheckInterval": 60,
    "AlertingEnabled": true,
    "AlertEmailRecipients": ["security@sabafone.com", "it-admin@sabafone.com"]
  },
  "RateLimiting": {
    "EnableIpRateLimiting": true,
    "IpWhitelist": ["127.0.0.1", "::1"],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*/auth/register",
        "Period": "1h",
        "Limit": 10
      }
    ]
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Port": 5000
      },
      "Https": {
        "Port": 5001,
        "Certificate": {
          "Path": "Certificates/ssas.pfx",
          "Password": "YourCertPassword"
        }
      }
    }
  },
  "KeyVault": {
    "Endpoint": "",
    "ClientId": "",
    "ClientSecret": "",
    "TenantId": ""
  },
  "ApplicationInsights": {
    "InstrumentationKey": "",
    "EnableAdaptiveSampling": true,
    "EnableDependencyTracking": true,
    "EnablePerformanceCounters": true
  },
  "FeatureFlags": {
    "EnableSwagger": true,
    "EnableHealthChecks": true,
    "EnableMetrics": true,
    "EnableAuditLog": true,
    "EnableTwoFactorAuth": false,
    "EnableEncryption": true,
    "EnableBackup": true,
    "EnableVulnerabilityScanning": true,
    "EnableComplianceMonitoring": true,
    "EnableRealTimeNotifications": true,
    "EnableApiVersioning": true,
    "EnableRateLimiting": true,
    "MaintenanceMode": false
  }
}
